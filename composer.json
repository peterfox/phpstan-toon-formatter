{
    "name": "peterfox/phpstan-toon-formatter",
    "description": "A TOON output formatter for PHPStan",
    "keywords": [
        "peterfox",
        "phpstan-toon-formatter"
    ],
    "homepage": "https://github.com/peterfox/phpstan-toon-formatter",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Fox",
            "email": "peter.fox@peterfox.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "helgesverre/toon": "^3.1",
        "phpstan/phpstan": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3.2",
        "friendsofphp/php-cs-fixer": "^3.21.1",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "PeterFox\\PhpStanToonFormatter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PeterFox\\PhpStanToonFormatter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
